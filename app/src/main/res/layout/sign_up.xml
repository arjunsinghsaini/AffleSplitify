<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.activity.MainActivity">

  <EditText
      android:id="@+id/edit_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:layout_marginHorizontal="30dp"
      android:hint="Name"

      ></EditText>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

       <ImageButton
           android:layout_width="150dp"
           android:layout_height="100dp"
           android:src="@mipmap/portrait"
           android:background="#FFFFFF"
></ImageButton>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingVertical="10dp"
          >
         <EditText
             android:id="@+id/edit_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:inputType="textEmailAddress"
             android:hint="Email"
             android:layout_marginRight="30dp"
             ></EditText>
         <EditText
             android:id="@+id/edit_password"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:inputType="textPersonName"
             android:hint="Password"
             android:layout_marginRight="30dp"
             ></EditText>
      </LinearLayout>

   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="+91"
          android:padding="20dp"
          android:layout_marginLeft="30dp"
          >
      </TextView>
      <EditText
          android:id="@+id/edit_phoneno"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="Phone No"
          android:padding="20dp"
          android:layout_marginHorizontal="30dp"

          ></EditText>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
       <TextView
           android:id="@+id/ruppeString"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text='@string/currency_string'
           android:gravity="center_horizontal"
           android:padding="30dp"
           >

       </TextView>
       <TextView
           android:id="@+id/changestring"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text='@string/change'
           android:gravity="center_horizontal"
           android:padding="30dp"
           android:textColor="#32a88b"
           >

       </TextView>
   </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"

    >
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingHorizontal="40dp"
       android:text="Back"
       android:textStyle="bold"
       ></Button>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingHorizontal="40dp"
        android:background="#32a88b"
       android:text="Done"
       android:textStyle="bold"
       android:textColor="#FFFFFF"
       ></Button>
</LinearLayout>
</LinearLayout>